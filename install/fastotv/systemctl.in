[Unit]
Description=@PROJECT_SUMMARY@
After=xorg.target
Requires=xorg.target

[Service]
Type=forking
PermissionsStartOnly=true
PIDFile=@PIDFILE_PATH@
ExecStartPre=-/usr/bin/mkdir @RUNTIME_DIR@
ExecStartPre=-/bin/touch @PIDFILE_PATH@
ExecStartPre=-/usr/bin/chown -R @USER_LOGIN@:@USER_GROUP@ @RUNTIME_DIR@ @PIDFILE_PATH@
ExecStart=@EXECUTABLE_PATH@ --daemon
ExecStop=@EXECUTABLE_PATH@ --stop
ExecStopPost=-/bin/rm -f @PIDFILE_PATH@
User=@USER_LOGIN@
Group=@USER_GROUP@

[Install]
WantedBy=multi-user.target
